            "  name: string;",
            "  $2",
            "}",
            "",
            "export function $1ModuleTemplate(props: ${1/(.*)/${1:/capitalize}/}ModuleProps) {",
            "  return html`<div class=\"welcome\">Hello ${props.name}!</div>`;",
            "}",
            "",
            "@customElement(\"$1-module\")",
            "export class ${1/(.*)/${1:/capitalize}/}Module extends LitElement implements ${1/(.*)/${1:/capitalize}/}ModuleProps {",
            "  static styles = [$1ModuleStyles];",
            "  @property({ type: String }) name = \"World\";",
            "  render() {",
            "    return $1ModuleTemplate(this);",
            "  }",
            "}",
