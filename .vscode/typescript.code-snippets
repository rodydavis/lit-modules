    "Create Lit Module": {
        "prefix": "lit-module",
        "body": [
            "import { html, css, LitElement } from \"lit\";",
            "import { customElement, property } from \"lit/decorators.js\";",
            "",
            "export const $1ModuleStyles = css`",
            "  ${2:main} {",
            "    $5",
            "  }",
            "`;",
            "",
            "export interface ${1/(.*)/${1:/capitalize}/}ModuleProps {",
            "  $3",
            "}",
            "",
            "export function $1ModuleTemplate(props: ${1/(.*)/${1:/capitalize}/}ModuleProps) {",
            "  return html`<${2:main}>$6</${2:main}>`;",
            "}",
            "",
            "@customElement(\"$1-module\")",
            "export class ${1/(.*)/${1:/capitalize}/}Module extends LitElement implements ${1/(.*)/${1:/capitalize}/}ModuleProps {",
            "  static styles = [$1ModuleStyles];",
            "",
            "  $4",
            "",
            "  render() {",
            "    return $1ModuleTemplate(this);",
            "  }",
            "}",
            "",
        ],
        "description": "Create a reuseable lit module"
